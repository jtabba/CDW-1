{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": "error",
        "no-undef": "error",
        "eqeqeq": "error",
        "no-mixed-spaces-and-tabs": "error",
        "space-before-function-paren": ["error", "never"]
    }
}
