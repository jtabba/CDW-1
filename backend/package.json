{
  "name": "secret-santa",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "ts-node --transpile-only src/server.ts",
    "build": "rimraf ./build && tsc",
    "start": "node --es-module-specifier-resolution=node build/server.js",
    "dev": "NODE_OPTIONS='--experimental-specifier-resolution=node' nodemon --exec node --loader ts-node/esm src/server.ts",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md,html,json}": [
      "eslint --fix",
      "prettier --cache --write",
      "git add"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/cors": "^2.8.13",
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "^38.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "nodemon": "^2.0.22",
    "prettier": "3.0.2",
    "pretty-quick": "^3.1.3",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4"
  },
  "type": "module",
  "description": ""
}
